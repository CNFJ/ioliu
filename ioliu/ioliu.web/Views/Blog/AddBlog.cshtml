@{
    Layout = "_UserLayout";
}
@model ioliu.domain.Blog
    <div>


        <form asp-action="AddBlog" asp-controller="Blog" method="post">
            <div class="row">

                <input asp-for="BlogName" />
                <span class="invalid" asp-validation-for="BlogName"></span>
            </div>
            <div class="row">

                <input asp-for="BlogContent" />
                <span class="invalid" asp-validation-for="BlogContent"></span>
            </div>
            <div class="row">

                <input asp-for="Tags" />
                <span class="invalid" asp-validation-for="Tags"></span>
            </div>
            <button type="submit" class="btn btn-primary">提交</button>
            <a asp-action="Index" class="btn btn-secondary">返回列表</a>

        </form>
    </div>