@{
    Layout = "_UserLayout1";
}
<div class="row sticky-parent">
    <!-- Sidebar nav -->
 

    <div class="col-12 col-md-12 col-lg-10">
        <div class="box box-content" id="content">
            <div class="content">

                <div id="contact-tab" class="tabcontent">
                    <div class="pb-2">
                        <h1 class="title title--h1 first-title title__separate">联系我</h1>
                    </div>

                    <!-- Contact -->
                    
                   

                    <form id="contact-form" class="contact-form" data-toggle="validator">
                        <div class="row">
                          
                            <div class="form-group col-12 col-md-12">
                                <textarea class="textarea form-control" id="messageContact" name="messageContact" placeholder="请输入..." rows="4" required="required" oninvalid="setCustomValidity('内容为空！')" onkeyup="setCustomValidity('')"></textarea>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 order-2 order-md-1 text-center text-md-left">
                                <div id="validator-contact" class="hidden"></div>
                            </div>
                            <div class="col-12 col-md-6 order-1 order-md-2 text-right">
                                <button type="submit" class="btn"><i class="font-icon icon-send"></i> 发送</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
            <footer class="footer">© 2020 DengFei</footer>
        </div>

    </div>


</div>