@{
    Layout = "_UserLayout";
}

<div class="row sticky-parent">
    <!-- Sidebar nav -->
    <aside class="col-12 col-md-12 col-lg-2">
        <div class="sidebar box sticky-column">
            <ul class="nav js-tabs">
                <li class="nav__item"><a asp-action="About" asp-controller="Home" target="iframe_a"><i class="icon-user"></i>关于我</a></li>
                <li class="nav__item"><a class="active" asp-action="Resume" asp-controller="Home"><i class="icon-file-text"></i>简历</a></li>
                <li class="nav__item"><a asp-action="Works" asp-controller="Home"><i class="icon-codesandbox"></i>工作</a></li>
                <li class="nav__item"><a asp-action="Blogs" asp-controller="Home"><i class="icon-book-open"></i>博客</a></li>
                <li class="nav__item"><a  asp-action="Contact" asp-controller="Home"><i class="icon-book"></i>联系我</a></li>
            </ul>
        </div>
    </aside>

    <div class="col-12 col-md-12 col-lg-10">
        <div class="box box-content" id="content">
            <div class="content">

                <div id="resume-tab" class="tabcontent">
                    <div class="pb-2">
                        <h1 class="title title--h1 first-title title__separate">简历</h1>
                    </div>

                    <!-- Experience -->
                    <div class="row">
                        <div class="col-12">
                            <h2 class="title title--h3"><img class="title-icon" src="assets/icons/icon-education.svg" alt="" /> 教育经历</h2>
                            <div class="timeline">
                                <!-- Item -->
                                <article class="timeline__item">
                                    <h5 class="title title--h5 timeline__title">西南科技大学</h5>
                                    <span class="timeline__period">2014/09/01— 2018/06/30</span>
                                    <p class="timeline__description">本科</p>
                                </article>

                                <!-- Item -->
                                <article class="timeline__item">
                                    <h5 class="title title--h5 timeline__title">四川交通职业技术学院</h5>
                                    <span class="timeline__period">2014/09/01-2017/06/25</span>
                                    <p class="timeline__description">专科</p>
                                </article>

                               
                            </div>
                        </div>

                        <div class="col-12">
                            <h2 class="title title--h3"><img class="title-icon" src="assets/icons/icon-experience.svg" alt="" /> 工作经验</h2>
                            <div class="timeline">
                                <!-- Item -->
                                <article class="timeline__item">
                                    <h5 class="title title--h5 timeline__title">成都愚夫科技有限公司</h5>
                                    <span class="timeline__period">2019-至今</span>
                                    <p class="timeline__description">开发工程师</p>
                                </article>
                                <!-- Item -->
                                <article class="timeline__item">
                                    <h5 class="title title--h5 timeline__title">成都炬创科技有限公司</h5>
                                    <span class="timeline__period">2017-2019</span>
                                    <p class="timeline__description">开发工程师</p>
                                </article>



                             
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="footer">© 2019 vCard</footer>
            </div>

        </div>

    </div>


</div>


