@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    
}
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>名称</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var roles in Model)
        {
        <tr>
            <td scope="row">@roles.Id</td>
            <td>@roles.Name</td>
            <td>


                <form asp-action="DeleteRole" asp-controller="Role" asp-route-id="@roles.Id" method="post">
                    <a class="btn btn-primary" asp-action="EditRole" asp-route-id="@roles.Id">编辑</a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('确认删除')">删除</button>
                </form>

            </td>
        </tr>
                }
           

        </tbody>
</table>
<a asp-action="AddRole" class="btn btn-primary">添加角色</a>
