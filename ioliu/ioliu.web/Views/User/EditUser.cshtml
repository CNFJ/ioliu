@model ioliu.web.ViewModel.UserEditViewModel
@{
}
    <form asp-action="EditUser"  method="post">
        <div class="form-group row">
            <label class="form-control" asp-for="Id"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Id" readonly />
                <span class="invalid" asp-validation-for="Id"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="form-control" asp-for="UserName"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="UserName"  />
                <span class="invalid" asp-validation-for="UserName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="form-control" asp-for="Birth"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Birth"  />
                <span class="invalid" asp-validation-for="Birth"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="form-control" asp-for="Phone"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Phone"  />
                <span class="invalid" asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="form-control" asp-for="Address"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Address"  />
                <span class="invalid" asp-validation-for="Address"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">提交</button>
    </form>
<h3>用户的Claims</h3>
<ul>
    @foreach(var claim in Model.Claims)
    {
        <li>@claim</li>
    }
</ul>
<a asp-action="ManageClaims" asp-route-userId="@Model.UserId" class="btn btn-primary"> 管理Claims</a>